@model Deserto.Models.Instruction

@{
    ViewData["Title"] = "displayInstruction";
}

<h1>displayInstruction</h1>

<div>
    <h4>Instruction</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.text)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.text)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.original)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.original)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.instructionID">Edit</a> |
    <a asp-action="Index">Back to List</a>
    @if (TempData["button"] == null)
    {
        <form asp-action="displayInstruction">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Next" class="btn btn-default btn-primary" />
            </div>
        </form>
    }
    else
    {
        <dt class="col-sm-2">
            <p>"FINITOOO"</p>
        </dt>
    }
</div>
